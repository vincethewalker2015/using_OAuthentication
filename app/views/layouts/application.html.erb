<!DOCTYPE html>
<html>
  <head>
    <title>LoginWithOAth2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Social Freak', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <% if current_user %>
        <ul class="nav navbar-nav pull-right">
          <li><%= image_tag current_user.image_url, alt: current_user.name %></li>
          <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
        </ul>
        
         <% else %>
        <ul class="nav navbar-nav">
          <li><%= link_to 'Twitter', '/auth/twitter', class: "btn btn-defaut" %></li>
          <li><%= link_to 'Facebook', '/auth/facebook', class: "btn btn-primary" %></li>
        </ul>
      <% end %>
    </div>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>
</div>



  <ul class="col-md-8 col-md-offset-4 list">
    <li><%= link_to "Sign in with Twitter", '/auth/twitter', class: "btn btn-default" %>
        <%= link_to 'Sign in with Facebook', '/auth/facebook', class: "btn btn-primary" %></li>
  </ul>


  </body>
</html>
